<div class='row form-title'>
  <h1 class='form-header'>New Announcement Form</h1>
  <h4><em>Please fill out all fields</em></h4>
</div>

<div class='row'>
  <%= form_for(:announcement, url: admin_announcements_path, :html => {:class => 'form-horizontal center'}) do |f| %>
  <div class='form-group'>
    <%= f.label :title, class: 'col-md-4 control-label'  %>
    <%= f.text_field :title, placeholder: "Enter the Announcement's title", class: 'col-sm-3' %>
  </div>

  <div class='form-group'>
    <%= f.label :body, class: 'col-md-4 control-label'  %>
    <%= f.text_area :body, placeholder: 'Enter the Announcement Here', :cols => '45', :rows => '10' %>
  </div>

  <div class='form-group'>
    <%= f.label :expiration_date, class: 'col-md-4 control-label'  %>
    <%= f.text_field :expiration_date, class: 'col-sm-3' %>
  </div>

  <div class='form-group'>
    <%= f.label :created_by, class: 'col-md-4 control-label' %>
    <%= f.text_field :created_by, placeholder: 'Enter Your Username', class: 'col-sm-3' %>
  </div>

  <div class='form-group'>
    <%= f.submit 'Submit', class: 'btn btn-default btn-primary col-md-2 col-md-offset-4' %>
  </div>
  <% end %>
</div>
